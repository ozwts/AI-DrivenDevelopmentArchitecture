{
  "name": "consultant-todo-server",
  "version": "1.0.0",
  "description": "Consultant TODO App - Server Side",
  "type": "module",
  "scripts": {
    "api:build": "npm run codegen && rm -rf dist/client-side-app && node esbuild.api.config.mjs",
    "build": "tsc",
    "codegen": "npm run --prefix .. codegen:bundle && rm -rf src/generated && mkdir -p src/generated && openapi-zod-client '../contracts/api/todo-app.openapi.yaml' --output './src/generated/zod-schemas.ts' --export-schemas",
    "dev": "SSM_PARAMETER_PATH=/sandbox-dev/server tsx watch src/handler/local-handler.ts",
    "dev:branch": "SSM_PARAMETER_PATH=/sandbox-dev-$(git branch --show-current | shasum | cut -c1-7)/server tsx watch src/handler/local-handler.ts",
    "fix": "run-s fix:*",
    "fix:format": "prettier --cache --write '**/*.{ts,json,yml,yaml,md}'",
    "fix:lint": "eslint --cache --max-warnings 0 --fix \"**/*.ts\"",
    "setup:db": "docker compose up -d --remove-orphans && wait-on tcp:8000 -t 30000 && sleep 2",
    "sort": "sort-package-json",
    "update:pkgs": "ncu -u",
    "start": "tsx src/handler/lambda-handler.ts",
    "test": "npm run setup:db && vitest run --reporter=verbose",
    "test:no-cache": "npm run setup:db && rm -rf tsc-cache && vitest",
    "test:watch": "npm run setup:db && vitest",
    "validate": "run-p validate:lint validate:tsc",
    "validate:format": "prettier --cache -c '**/*.{ts,json,yml,yaml,md}'",
    "fix:knip": "knip --fix",
    "validate:knip": "knip --reporter json",
    "validate:lint": "eslint --cache --max-warnings 0 \"**/*.ts\"",
    "validate:tsc": "tsc --noEmit",
    "validate:tsc:watch": "tsc --watch"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.28.1",
    "@aws-sdk/client-cognito-identity-provider": "^3.932.0",
    "@aws-sdk/client-dynamodb": "^3.700.0",
    "@aws-sdk/client-s3": "^3.932.0",
    "@aws-sdk/client-ssm": "^3.700.0",
    "@aws-sdk/lib-dynamodb": "^3.700.0",
    "@aws-sdk/s3-request-presigner": "^3.932.0",
    "@hono/node-server": "^1.14.0",
    "aws-jwt-verify": "^5.1.1",
    "dayjs": "^1.11.18",
    "hono": "^4.0.0",
    "inversify": "^6.2.1",
    "reflect-metadata": "^0.2.2",
    "tslib": "2.8.1",
    "uuid": "13.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@faker-js/faker": "^9.9.0",
    "@types/aws-lambda": "8.10.156",
    "@types/node": "^22.0.0",
    "@types/uuid": "10.0.0",
    "esbuild": "^0.25.11",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-local-rules": "^3.0.2",
    "eslint-plugin-unused-imports": "^4.1.3",
    "knip": "^5.71.0",
    "npm-run-all": "4.1.5",
    "openapi-zod-client": "^1.18.3",
    "prettier": "^3.0.0",
    "npm-check-updates": "^18.0.1",
    "sort-package-json": "2.10.0",
    "tsx": "^4.20.5",
    "typescript": "5.5.4",
    "typescript-eslint": "^8.0.0",
    "vitest": "^4.0.16",
    "wait-on": "^9.0.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
