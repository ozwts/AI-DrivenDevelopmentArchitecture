{
  "name": "web",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "codegen": "rm -rf src/generated && mkdir -p src/generated && openapi-zod-client '../todo.openapi.yaml' --output './src/generated/zod-schemas.ts' --export-schemas",
    "config:dev": "cp ./src/config.dev.ts ./src/config.ts",
    "config:local": "cp ./src/config.local.ts ./src/config.ts",
    "config:mock": "cp ./src/config.mock.ts ./src/config.ts",
    "dev": "npm run config:dev && react-router dev",
    "dev:local": "npm run config:local && react-router dev",
    "dev:mock": "npm run config:mock && react-router dev",
    "build": "npm run codegen && npm run config:dev && react-router build",
    "fix": "run-s fix:*",
    "fix:format": "prettier --cache --write '**/*.{ts,tsx,json,yml,yaml,md}'",
    "fix:lint": "eslint --cache --max-warnings 0 --fix .",
    "lint": "eslint .",
    "preview": "vite preview",
    "setup:browser": "playwright install --with-deps chromium",
    "sort": "sort-package-json",
    "start": "react-router-serve ./build/server/index.js",
    "test": "run-s test:ct test:ss",
    "test:ct": "npm run config:mock && npm run setup:browser && playwright test -c playwright-ct.config.ts",
    "test:ct:ui": "playwright test -c playwright-ct.config.ts --ui",
    "test:ss": "npm run config:mock && npm run setup:browser && playwright test -c playwright-ss.config.ts",
    "test:ss:refresh": "find src -type d -name '*.ss.test.ts-snapshots' -exec rm -rf {} + && npm run test:ss:update",
    "test:ss:ui": "playwright test -c playwright-ss.config.ts --ui",
    "test:ss:update": "playwright test -c playwright-ss.config.ts --update-snapshots",
    "typegen": "react-router typegen",
    "update:packages": "ncu -u",
    "validate": "run-p validate:lint validate:tsc",
    "validate:format": "prettier --cache -c '**/*.{ts,tsx,json,yml,yaml,md}'",
    "validate:lint": "eslint --cache --max-warnings 0 .",
    "validate:tsc": "react-router typegen && tsc"
  },
  "dependencies": {
    "@heroicons/react": "2.2.0",
    "@hookform/resolvers": "^5.2.2",
    "@react-router/node": "^7.10.1",
    "@tanstack/react-query": "^4.36.1",
    "@uiw/react-markdown-preview": "5.1.5",
    "aws-amplify": "^6.15.8",
    "i18next": "^25.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.2",
    "react-router": "^7.1.1",
    "zod": "^3.25.76",
    "zod-i18n-map": "^2.27.0",
    "isbot": "^5"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@playwright/experimental-ct-react": "^1.56.1",
    "@playwright/test": "^1.56.1",
    "@react-router/dev": "^7.1.1",
    "@react-router/serve": "^7.1.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-local-rules": "^3.0.2",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^15.9.0",
    "knip": "^5.71.0",
    "msw": "^1.3.5",
    "npm-check-updates": "^18.0.1",
    "npm-run-all": "^4.1.5",
    "openapi-zod-client": "^1.18.3",
    "playwright-msw": "^2.2.1",
    "postcss": "^8.4.41",
    "prettier": "^3.3.1",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "sort-package-json": "^3.2.1",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.1.0",
    "url-join": "^5.0.0",
    "vite": "^5.4.7"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
