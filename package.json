{
  "name": "consultant-todo-app",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "web",
    "server",
    "infra"
  ],
  "scripts": {
    "sort": "sort-package-json",
    "dev": "npm run dev -w web",
    "dev:local": "npm run dev:local -w web",
    "fix": "npm run fix -w web -w server -w infra",
    "fix:format": "npm run fix:format -w web -w server -w infra",
    "validate": "npm run validate -w web -w server -w infra && npm run validate:cspell",
    "validate:cspell": "cspell '**/*.{ts,tsx}' --cache --gitignore",
    "codegen": "npm run codegen -w server -w web",
    "update:pkgs": "ncu -u && npm run update:pkgs -w server -w web -w infra",
    "client:build": "npm run build -w web",
    "server:build": "npm run build -w server",
    "test": "npm run test -w server -w web",
    "deploy": "npm run deploy:dev -w infra",
    "deploy:api": "npm run deploy:api:dev -w infra",
    "deploy:web": "npm run deploy:web:dev -w infra",
    "destroy": "npm run destroy:dev -w infra"
  },
  "devDependencies": {
    "@tsconfig/strictest": "2.0.5",
    "@typescript-eslint/eslint-plugin": "8.0.1",
    "@typescript-eslint/parser": "8.0.1",
    "cspell": "8.13.2",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-unused-imports": "4.1.3",
    "npm-check-updates": "17.0.6",
    "npm-run-all": "4.1.5",
    "openapi2aspida": "0.23.2",
    "prettier": "3.3.3",
    "sort-package-json": "2.10.0",
    "typescript": "5.2.2"
  }
}
