{
  "mcpServers": {
    "guardrails": {
      "command": "npx",
      "args": ["tsx", "guardrails/index.ts"]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--headless"
      ]
    },
    "playwright-test": {
      "command": "uvx",
      "args": [
        "mcp-filter",
        "run",
        "-t", "stdio",
        "--stdio-command", "npx",
        "--stdio-arg", "playwright",
        "--stdio-arg", "run-test-mcp-server",
        "-a", "test_list,test_run,test_debug,generator_setup_page,generator_read_log,generator_write_test,planner_setup_page,planner_save_plan,browser_verify_element_visible,browser_verify_text_visible,browser_verify_list_visible,browser_verify_value,browser_generate_locator"
      ]
    },
    "github": {
      "command": "sh",
      "args": [
        "-c",
        "docker run -i --rm -e GITHUB_PERSONAL_ACCESS_TOKEN=$(gh auth token) ghcr.io/github/github-mcp-server stdio --tools issue_read,issue_write,list_issues,search_issues,add_issue_comment,pull_request_read,create_pull_request,update_pull_request,list_pull_requests,merge_pull_request,pull_request_review_write,update_pull_request_branch"
      ]
    }
  }
}
